{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang-tidy",
      "type": "shell",
      "command": "./tools/clang-tidy",
      "args": [
        "-p",
        "builddir",
        "./src/main.cpp",
      ],
      "problemMatcher": {
        "owner": "cpp",
        "source": "clang-tidy-",
        "fileLocation": "autoDetect",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)\\s+\\[(.*)\\]$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        },
      },
      "group": {
        "kind": "test",
        "isDefault": true,
      },
    },
    {
      "label": "meson setup",
      "type": "shell",
      "command": "meson",
      "args": [
        "setup",
        "--reconfigure",
        "builddir"
      ],
      "group": {
        "kind": "build",
        "isDefault": false,
      },
    },
    {
      "label": "meson build",
      "type": "shell",
      "command": "meson",
      "args": [
        "compile",
        "-C",
        "builddir"
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": "meson setup",
    },
  ],
}
