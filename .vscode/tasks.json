{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "meson setup",
      "type": "shell",
      "command": "meson",
      "args": [
        "setup",
        "--reconfigure",
        "builddir"
      ],
      "group": {
        "kind": "build",
        "isDefault": false,
      },
    },
    {
      "label": "meson build",
      "type": "shell",
      "command": "meson",
      "args": [
        "compile",
        "-C",
        "builddir"
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": "meson setup",
    },
  ],
}
